
@{
    ViewBag.Title = "UserRelClientPackageTableDialog";
    Layout = null;
}


<div id="UserRelClientPackageTableDialog">
    <br /><br />
    <div style="width:100%; margin:0 auto" class="tablecontainer table table-stripped table-boarded">
        <table id="myUserRelClientPackageDatatable" class="table">
            <thead class="thead-light">
                <tr>
                    <th>Nume</th>
                    <th>Actiune</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<script>
    $(function () {

        var oTable = $('#myUserRelClientPackageDatatable').DataTable({
            "language": {
                "lengthMenu": "Afiseaza _MENU_ inregistrari pe pagina",
                "zeroRecords": "Ne pare rau dar nu am gasit inregistrari",
                "info": "Pagina _PAGE_ din _PAGES_",
                "infoEmpty": "Nu sunt inregistrari disponibile",
                "infoFiltered": "(filtru aplicat pe _MAX_ inregistrari totale)",
                "sSearch": "Caută:",
                "sProcessing": "Procesează...",
                "oPaginate": {
                    "sFirst": "Prima",
                    "sPrevious": "Precedenta",
                    "sNext": "Următoarea",
                    "sLast": "Ultima"
                }
            },
            "autoWidth": false,
            "columnDefs": [
                { "width": "50%" },
                { "width": "50%" },
            ],
            "ajax": {
                "url": '/UserRelationship/GetUserRelClientPackages',
                "type": "POST",
                data: {
                    clientId: $("#ClientId").val()
                },
                "datatype": "json"
            },
            "columns": [
                { "data": "Name"},
                {
                    "data": "Id", "width": "50px", "render": function (data) {
                        return '<a id="myClickClientPackage" href="" style="color: blue" onclick="AssociateUserRelClientPackage(' + data +')">Asociaza</a>';
                    }
                }
            ]
        })
    })
</script>

<script src="~/Scripts/App/UserRelTableDialogs.js"></script>



