@model FindMyOrder.Models.Cars
@{
    ViewBag.Title = "AddCar";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1 class="myPageTitle">Adauga vehicul</h1>
            </div>
        </div>
    </div>
</div>
<br />
<br />


<div style="width:90%; margin:0 auto">
    @using (Html.BeginForm("AddCar", "Cars", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {

        <div class="form-group">
            @Html.LabelFor(x => x.Name)<br />
            @Html.EditorFor(a => a.Name, new { htmlAttributes = new { @class = "form-control text-box single-line", autocomplete = "off" } })
            @Html.ValidationMessageFor(a => a.Name, "", new { @class = "redText" })
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.LPerHundredKm)<br />
            @Html.EditorFor(a => a.LPerHundredKm, new { htmlAttributes = new { @class = "form-control text-box single-line", autocomplete = "off" } })
            @Html.ValidationMessageFor(a => a.LPerHundredKm, "", new { @class = "redText" })
        </div>



        <div class="row">
            <div class="col-lg-6 margin">
                @Html.LabelFor(x => x.CarImage, "Adauga image")<br />
                <input type="file" id="image1" name="image1" />
            </div>
        </div>
        <br />
        <br />

        <div>
            <input type="button" class="btn" onclick="location.href='/Cars/Index';" value="Inapoi" />
            <input type="submit" class="btn" value="Salveaza" />
        </div>
    }
</div>
