@model FindMyOrder.Models.Cars

@{
    Layout = null;
}

<h2>Sterge automobil</h2>
<br />
@using (Html.BeginForm("DeleteCar", "Cars", FormMethod.Post, new { id = "popupFormDeleteCar" }))
{
    @Html.HiddenFor(a => a.Id)
    @Html.Raw(TempData["msgCourier"])


    <div class="form-group">
        @Html.LabelFor(a => a.Name)<br />
        <input disabled class="form-control" value="@Model.Name">
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.LPerHundredKm)<br />
        <input disabled class="form-control"  value="@Model.LPerHundredKm">
    </div>

    <div class="form-group">
        @Html.LabelFor(a => a.CarImage)<br />
        <img class="img-responsive imageSize" src="@Model.StringCarImage" />
    </div>

    <div>
        <input type="submit" class="btn" id="SubmitDeleteFormButtonClient" value="Sterge" />
    </div>
}


