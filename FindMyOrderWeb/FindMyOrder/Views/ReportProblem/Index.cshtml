
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1 class="myPageTitle">Probleme raportate</h1>
            </div>
        </div>
    </div>
</div>

<br /><br />


<div style="width:90%; margin:0 auto" class="tablecontainer">
    <table id="myDatatableProblem" class="table">
        <thead class="thead-light">
            <tr>
                <th>Nume curier</th>
                <th>E-mail curier</th>
                <th>Problema raportata</th>
            </tr>
        </thead>
    </table>
</div>

<br /><br />


<script>
    (function () {
        var oTable = $('#myDatatableProblem').dataTable({
            "language": {
                "lengthMenu": "Afiseaza _MENU_ inregistrari pe pagina",
                "zeroRecords": "Ne pare rau dar nu am gasit inregistrari",
                "info": "Pagina _PAGE_ din _PAGES_",
                "infoEmpty": "Nu sunt inregistrari disponibile",
                "infoFiltered": "(filtru aplicat pe _MAX_ inregistrari totale)",
                "sSearch": "Caută:",
                "sProcessing": "Procesează...",
                "oPaginate": {
                    "sFirst": "Prima",
                    "sPrevious": "Precedenta",
                    "sNext": "Următoarea",
                    "sLast": "Ultima"
                }
            },
            "autoWidth": false,
            "columnDefs": [
                { "width": "33.33%" },
                { "width": "33.33%" },
                { "width": "33.33%" }
            ],
            "ajax": {
                "url": '/ReportProblem/GetProblemMessages',
                "type": "POST",
                "datatype": "json"
            },
            "columns": [
                { "data": "User.UserDetails.Name" },
                { "data": "User.Email" },
                { "data": "Message" }
            ]
        })
    }());
</script>