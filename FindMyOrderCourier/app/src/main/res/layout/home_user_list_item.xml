<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/home_iconText"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/chat_circle_accent"
            android:gravity="center"
            android:text="S"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Stahie Alexandru"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_user_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresa: Strada ..."
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_user_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coletul contine: Casti .."
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_user_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Nr Telefon: 0757786532" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/home_user_Id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>

