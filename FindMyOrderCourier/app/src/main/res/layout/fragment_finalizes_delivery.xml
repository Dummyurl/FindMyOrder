<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Drawer.FinalizesDeliveryFragment">

    <TextView
        android:id="@+id/tvFinalizesDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Mesaj pt curier"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_marginBottom="35dp"/>

    <EditText
        android:id="@+id/etFinalizesDeliveryObs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvFinalizesDelivery"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Observatii..." />


    <Button
        android:id="@+id/bFinalizesDelivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etFinalizesDeliveryObs"
        android:layout_marginTop="10dp"
        android:text="Finalizare" />
</RelativeLayout>